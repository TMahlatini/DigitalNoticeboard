<h1>Create New Sticker Note</h1>

<%= form_with model: @sticker_note, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Note', class: 'btn btn-success' %>
<% end %>
